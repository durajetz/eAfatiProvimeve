<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp">

    <RelativeLayout android:id="@+id/mainLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <TextView
            android:id="@+id/text_view_emri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="1"
            android:layout_toStartOf="@+id/text_view_dita"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:layout_toLeftOf="@+id/text_view_dita"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/text_view_datagjeneruar"
            android:layout_marginTop="10dp"
            android:textSize="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_emri"
            android:text="MM/dd/yyyy"
            />
        <TextView
            android:id="@+id/text_view_dita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="M4"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" />



    </RelativeLayout>

</androidx.cardview.widget.CardView>
